                android:textStyle="bold" />

            <View
                android:id="@+id/divider57"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/id_btnUM"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/um"
                android:fontFamily="@font/roboto"
                android:onClick="irListaUM"
                android:text="UNIDADES DE MEDIDA"
                android:textColor="#11232E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider58"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView106"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CAC4C4"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Respaldo"
                android:textColor="#11232E" />

            <View
                android:id="@+id/divider72"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/btn_servidor"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/globe"
                android:fontFamily="@font/roboto"
                android:onClick="irServidor"
                android:text="Configurar IP Servidor"
                android:textColor="#11232E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider76"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/id_btnSincronizarServidor"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/backup"
                android:fontFamily="@font/roboto"
                android:text="ENVIAR DATOS AL SERVIDOR"
                android:textColor="#11232E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider74"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>